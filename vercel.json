{
    "version": 2,
    "builds": [
      { "src": "dist/LinkSphere/server/server.mjs", "use": "@vercel/node" },
      { "src": "dist/LinkSphere/browser/**", "use": "@vercel/static" }
    ],
    "routes": [
      {
        "src": "/(.*\\.(?:js|css|png|jpg|jpeg|gif|ico|svg|webp|woff2?|ttf|map))",
        "dest": "dist/LinkSphere/browser/$1"
      },
      {
        "src": "/(.*)",
        "dest": "dist/LinkSphere/server/main.js"
      }
    ]
  }